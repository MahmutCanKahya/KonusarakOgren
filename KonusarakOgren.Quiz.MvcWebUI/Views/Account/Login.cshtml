@model KonusarakOgren.Quiz.MvcWebUI.Models.LoginViewModel;
@{
    Layout = "~/Views/_Layout.cshtml";
}


<div class="container border border-dark p-4 ">
    <h2 class="text-center">KULLANICI GİRİŞ</h2>
    <form class="form-signin" asp-controller="Account" asp-action="Login" method="post" role="form">
        <div class="form-group ">
            <input asp-for="UserName" class="form-control" placeholder="Username" required autofocus>
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="Password" required autofocus>
            <span asp-validation-for="Password"></span>
        </div>

        <input class="btn btn-primary" type="submit" value="Login" />
    </form>
    @Html.ValidationSummary()
</div>
